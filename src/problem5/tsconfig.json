{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "baseUrl": "./",
    "target": "ES6",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
